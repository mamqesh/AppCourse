        <Button Content="РЕГИСТРАЦИЯ" FontSize="25" HorizontalAlignment="Center" Margin="100,21,116,30" VerticalAlignment="Center" Width="296" Height="81" Grid.Row="6" Grid.Column="2" Click="Button_Click"/>
